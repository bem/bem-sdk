{
  "name": "bem-walk",
  "version": "1.0.0-1",
  "description": "Walk easily thru BEM file structure",
  "keywords": [
    "bem",
    "walk",
    "level",
    "scheme",
    "nested",
    "flat"
  ],
  "author": "Andrew Abramov <mail@blond.im> (github.com/blond)",
  "license": "MPL-2.0",
  "repository": "bem-sdk/bem-walk",
  "engines": {
    "node": ">= 4.0"
  },
  "main": "lib/index.js",
  "files": [
    "lib/**"
  ],
  "dependencies": {
    "async-each": "1.0.1",
    "bem-naming": "1.0.1"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "benchmark": "^2.1.0",
    "coveralls": "^2.11.9",
    "eslint": "^3.0.0",
    "eslint-config-pedant": "^0.8.0",
    "jscs": "^3.0.3",
    "mock-fs": "^3.10.0",
    "nyc": "^9.0.1",
    "promise-map-series": "^0.2.2",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.4",
    "stream-to-array": "^2.3.0"
  },
  "scripts": {
    "pretest": "eslint . && jscs . -c .jscs.js",
    "test": "nyc ava",
    "unit-test": "ava",
    "bench": "npm run bench-deps && node ./bench/run.js",
    "bench-deps": "cd bench && npm i && cd fixtures && bower i",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "ava": {
    "serial": true,
    "verbose": true,
    "files": [
      "test/**/*.test.js"
    ]
  }
}
