    "coveralls": "^2.11.9",
    "eslint": "^3.0.0",
    "eslint-config-pedant": "^0.9.0",
    "nyc": "^10.0.0",
    "proxyquire": "^1.7.7",
    "sinon": "^2.1.0",
    "tslint": "^5.0.0",
    "tslint-config-typings": "^0.3.1",
    "typescript": "^2.2.2"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "nyc ava",
    "lint": "npm run lint:js && npm run lint:dts",
    "lint:js": "eslint .",
    "lint:dts": "tslint types/*.d.ts",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
